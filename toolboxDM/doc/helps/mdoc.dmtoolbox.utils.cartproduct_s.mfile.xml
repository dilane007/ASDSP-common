<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='../mfile_doc.xsl'?>
<MFileInfo mname='cartproduct_s' filename='cartproduct_s.m'>
  <Context is_root='true'>
    <Self path='mdoc.dmtoolbox.utils.cartproduct_s.mfile.xml'/>
    <Prev path='mdoc.dmtoolbox.utils.cartproduct.mfile.xml'/>
    <Next path='mdoc.dmtoolbox.utils.combfun.mfile.xml'/>
    <Root path='mdoc.dmtoolbox.mdir.xml'/>
    <Parent path='mdoc.dmtoolbox.utils.mdir.xml'/>
  </Context>
  <MDoc mtype='function'>
    <MFuncDecl funcname='cartproduct_s'>
      <Inputs>
        <Var name='fieldnames'/>
        <Var name='varargin'/>
      </Inputs>
      <Outputs>
        <Var name='P'/>
      </Outputs>
    </MFuncDecl>
    <MHeadLine leadword='CARTPRODUCT_S'>Computes the Cartesian products between cell arrays and makes a struct array to express the results</MHeadLine>
    <MSection name='description'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>P = cartproduct_s(fieldnames, C1, C2, ...)</MParagraph>
        </MListItem>
      </MList>
    </MSection>
    <MSection name='arguments'>
      <MTermList listtype='unordered'>
        <MTermEntry term='Ci'>
          <MParagraph>the i-th set of elements</MParagraph>
        </MTermEntry>
        <MTermEntry term='fieldnames'>
          <MParagraph>the fieldnames of the struct array</MParagraph>
        </MTermEntry>
        <MTermEntry term='P'>
          <MParagraph>the cartesian product in form of struct array</MParagraph>
        </MTermEntry>
      </MTermList>
    </MSection>
    <MSection name='description'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>P = cartproduct_s(C1, C2, ...) computes the cartesian product of C1, C2, ..., which are in form of cell arrays.</MParagraph>
          <MParagraph>Suppose C1, C2, ... respectively has n1, n2, ... elements. Then P is an n1 x n2 x ... struct array, such that</MParagraph>
          <MFormulaLine>P(i1, i2, ...).(fieldnames{k}) = Ck{ik}</MFormulaLine>
        </MListItem>
      </MList>
    </MSection>
    <MSection name='history'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>Created by Dahua Lin, on Jun 27, 2007</MParagraph>
        </MListItem>
      </MList>
    </MSection>
  </MDoc>
</MFileInfo>
