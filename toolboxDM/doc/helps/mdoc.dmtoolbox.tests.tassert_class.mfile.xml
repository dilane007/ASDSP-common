<?xml version='1.0'?>
<?xml-stylesheet type='text/xsl' href='../mfile_doc.xsl'?>
<MFileInfo mname='tassert_class' filename='tassert_class.m'>
  <Context is_root='true'>
    <Self path='mdoc.dmtoolbox.tests.tassert_class.mfile.xml'/>
    <Prev path='mdoc.dmtoolbox.tests.tassert.mfile.xml'/>
    <Next path='mdoc.dmtoolbox.tests.tassert_empty.mfile.xml'/>
    <Root path='mdoc.dmtoolbox.mdir.xml'/>
    <Parent path='mdoc.dmtoolbox.tests.mdir.xml'/>
  </Context>
  <MDoc mtype='function'>
    <MFuncDecl funcname='tassert_class'>
      <Inputs>
        <Var name='classname'/>
        <Var name='x'/>
        <Var name='level'/>
        <Var name='rstack'/>
      </Inputs>
      <Outputs>
        <Var name='b'/>
      </Outputs>
    </MFuncDecl>
    <MHeadLine leadword='TASSERT_CLASS'>Testing an assertion on the class of a value</MHeadLine>
    <MSection name='syntax'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>tassert_class(classname, x)</MParagraph>
        </MListItem>
        <MListItem>
          <MParagraph>tassert_class(classname, x, level)</MParagraph>
        </MListItem>
        <MListItem>
          <MParagraph>b = tassert_class(...)</MParagraph>
        </MListItem>
      </MList>
    </MSection>
    <MSection name='arguments'>
      <MTermList listtype='unordered'>
        <MTermEntry term='x'>
          <MParagraph>the two value to be tested</MParagraph>
        </MTermEntry>
        <MTermEntry term='classname'>
          <MParagraph>the name of the class that x is asserted to be</MParagraph>
        </MTermEntry>
        <MTermEntry term='level'>
          <MParagraph>the level of the assertion (&apos;normal&apos; or &apos;fatal&apos;)</MParagraph>
        </MTermEntry>
        <MTermEntry term='b'>
          <MParagraph>whether x is a value of the specified class</MParagraph>
        </MTermEntry>
      </MTermList>
    </MSection>
    <MSection name='description'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>tassert_class(classname, x) tests the assertion of class in normal level, and records the the testing result in the current test monitor.</MParagraph>
        </MListItem>
        <MListItem>
          <MParagraph>tassert_class(classname, x, level) tests the assertion in the specified level and records the testing result.</MParagraph>
        </MListItem>
        <MListItem>
          <MParagraph>b = tassert_class(...) returns the whether x is a value of the specified class</MParagraph>
        </MListItem>
      </MList>
    </MSection>
    <MSection name='remarks'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>The MATLAB function isa is used to test.</MParagraph>
        </MListItem>
      </MList>
    </MSection>
    <MSection name='history'>
      <MList listtype='unordered'>
        <MListItem>
          <MParagraph>Created by Dahua Lin, on Jun 29, 2007</MParagraph>
        </MListItem>
      </MList>
    </MSection>
  </MDoc>
</MFileInfo>
